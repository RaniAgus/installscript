{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "InstallScript Configuration Schema",
  "description": "Schema for installscript YAML configuration files",
  "type": "object",
  "patternProperties": {
    "^[a-zA-Z0-9_-]+$": {
      "type": "array",
      "description": "List of installation methods for this package",
      "minItems": 1,
      "items": {
        "oneOf": [
          {
            "type": "string",
            "description": "Simple type specification (e.g., 'apt', 'dnf')"
          },
          {
            "$ref": "#/definitions/aptPackage"
          },
          {
            "$ref": "#/definitions/dnfPackage"
          },
          {
            "$ref": "#/definitions/debPackage"
          },
          {
            "$ref": "#/definitions/snapdPackage"
          },
          {
            "$ref": "#/definitions/flatpakPackage"
          },
          {
            "$ref": "#/definitions/pipPackage"
          },
          {
            "$ref": "#/definitions/tarPackage"
          },
          {
            "$ref": "#/definitions/zipPackage"
          },
          {
            "$ref": "#/definitions/githubPackage"
          },
          {
            "$ref": "#/definitions/filePackage"
          },
          {
            "$ref": "#/definitions/shellPackage"
          },
          {
            "$ref": "#/definitions/appimagePackage"
          }
        ]
      }
    }
  },
  "additionalProperties": false,
  "definitions": {
    "commandList": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "oneOf": [
              {
                "type": "string"
              },
              {
                "$ref": "#/definitions/shellCommand"
              },
              {
                "$ref": "#/definitions/teeCommand"
              }
            ]
          }
        }
      ]
    },
    "shellCommand": {
      "type": "object",
      "required": ["type", "command"],
      "properties": {
        "type": {
          "const": "shell"
        },
        "command": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "teeCommand": {
      "type": "object",
      "required": ["type", "content", "destination"],
      "properties": {
        "type": {
          "const": "tee"
        },
        "content": {
          "type": "string"
        },
        "destination": {
          "type": "string"
        },
        "sudo": {
          "type": "boolean"
        },
        "append": {
          "type": "boolean"
        },
        "mkdir": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "dependencyList": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "string"
          },
          {
            "type": "object",
            "required": ["type"],
            "properties": {
              "type": {
                "type": "string"
              },
              "packages": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        ]
      }
    },
    "aptPackage": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "const": "apt"
        },
        "packages": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "flags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "sudo": {
          "type": "boolean"
        },
        "depends_on": {
          "$ref": "#/definitions/dependencyList"
        },
        "pre_install": {
          "$ref": "#/definitions/commandList"
        },
        "post_install": {
          "$ref": "#/definitions/commandList"
        }
      },
      "additionalProperties": false
    },
    "dnfPackage": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "const": "dnf"
        },
        "packages": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "flags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "sudo": {
          "type": "boolean"
        },
        "repofile": {
          "type": "string"
        },
        "repo": {
          "type": "string"
        },
        "copr": {
          "type": "string"
        },
        "depends_on": {
          "$ref": "#/definitions/dependencyList"
        },
        "pre_install": {
          "$ref": "#/definitions/commandList"
        },
        "post_install": {
          "$ref": "#/definitions/commandList"
        }
      },
      "additionalProperties": false
    },
    "debPackage": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "const": "deb"
        },
        "packages": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "flags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "sudo": {
          "type": "boolean"
        },
        "depends_on": {
          "$ref": "#/definitions/dependencyList"
        },
        "pre_install": {
          "$ref": "#/definitions/commandList"
        },
        "post_install": {
          "$ref": "#/definitions/commandList"
        }
      },
      "additionalProperties": false
    },
    "snapdPackage": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "const": "snapd"
        },
        "packages": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "flags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "sudo": {
          "type": "boolean"
        },
        "classic": {
          "type": "boolean"
        },
        "depends_on": {
          "$ref": "#/definitions/dependencyList"
        },
        "pre_install": {
          "$ref": "#/definitions/commandList"
        },
        "post_install": {
          "$ref": "#/definitions/commandList"
        }
      },
      "additionalProperties": false
    },
    "flatpakPackage": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "const": "flatpak"
        },
        "packages": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "flags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "sudo": {
          "type": "boolean"
        },
        "remote": {
          "type": "string"
        },
        "depends_on": {
          "$ref": "#/definitions/dependencyList"
        },
        "pre_install": {
          "$ref": "#/definitions/commandList"
        },
        "post_install": {
          "$ref": "#/definitions/commandList"
        }
      },
      "additionalProperties": false
    },
    "pipPackage": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "const": "pip"
        },
        "packages": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "flags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "sudo": {
          "type": "boolean"
        },
        "depends_on": {
          "$ref": "#/definitions/dependencyList"
        },
        "pre_install": {
          "$ref": "#/definitions/commandList"
        },
        "post_install": {
          "$ref": "#/definitions/commandList"
        }
      },
      "additionalProperties": false
    },
    "tarPackage": {
      "type": "object",
      "required": ["type", "url", "destination"],
      "properties": {
        "type": {
          "const": "tar"
        },
        "url": {
          "type": "string"
        },
        "destination": {
          "type": "string"
        },
        "sudo": {
          "type": "boolean"
        },
        "depends_on": {
          "$ref": "#/definitions/dependencyList"
        },
        "pre_install": {
          "$ref": "#/definitions/commandList"
        },
        "post_install": {
          "$ref": "#/definitions/commandList"
        }
      },
      "additionalProperties": false
    },
    "zipPackage": {
      "type": "object",
      "required": ["type", "url", "destination"],
      "properties": {
        "type": {
          "const": "zip"
        },
        "url": {
          "type": "string"
        },
        "destination": {
          "type": "string"
        },
        "sudo": {
          "type": "boolean"
        },
        "depends_on": {
          "$ref": "#/definitions/dependencyList"
        },
        "pre_install": {
          "$ref": "#/definitions/commandList"
        },
        "post_install": {
          "$ref": "#/definitions/commandList"
        }
      },
      "additionalProperties": false
    },
    "githubPackage": {
      "type": "object",
      "required": ["type", "repository", "install"],
      "properties": {
        "type": {
          "const": "github"
        },
        "repository": {
          "type": "string"
        },
        "install": {
          "type": "string"
        },
        "depends_on": {
          "$ref": "#/definitions/dependencyList"
        },
        "pre_install": {
          "$ref": "#/definitions/commandList"
        },
        "post_install": {
          "$ref": "#/definitions/commandList"
        }
      },
      "additionalProperties": false
    },
    "filePackage": {
      "type": "object",
      "required": ["type", "url", "destination"],
      "properties": {
        "type": {
          "const": "file"
        },
        "url": {
          "type": "string"
        },
        "destination": {
          "type": "string"
        },
        "sudo": {
          "type": "boolean"
        },
        "silent": {
          "type": "boolean"
        },
        "executable": {
          "type": "boolean"
        },
        "depends_on": {
          "$ref": "#/definitions/dependencyList"
        },
        "pre_install": {
          "$ref": "#/definitions/commandList"
        },
        "post_install": {
          "$ref": "#/definitions/commandList"
        }
      },
      "additionalProperties": false
    },
    "shellPackage": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "const": "shell"
        },
        "shell": {
          "type": "string"
        },
        "url": {
          "type": "string"
        },
        "script": {
          "type": "string"
        },
        "sudo": {
          "type": "boolean"
        },
        "depends_on": {
          "$ref": "#/definitions/dependencyList"
        },
        "pre_install": {
          "$ref": "#/definitions/commandList"
        },
        "post_install": {
          "$ref": "#/definitions/commandList"
        }
      },
      "additionalProperties": false,
      "anyOf": [
        {
          "required": ["url"]
        },
        {
          "required": ["script"]
        }
      ]
    },
    "appimagePackage": {
      "type": "object",
      "required": ["type", "url"],
      "properties": {
        "type": {
          "const": "appimage"
        },
        "url": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "icon_name": {
          "type": "string"
        },
        "categories": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          ]
        },
        "depends_on": {
          "$ref": "#/definitions/dependencyList"
        },
        "pre_install": {
          "$ref": "#/definitions/commandList"
        },
        "post_install": {
          "$ref": "#/definitions/commandList"
        }
      },
      "additionalProperties": false
    }
  }
}
