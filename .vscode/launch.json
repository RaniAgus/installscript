{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: Current File with Arguments",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/installscript.py",
      "console": "integratedTerminal",
      "args": [
        "${workspaceFolder}/tests/inputs/${input:file}.yml",
        "--os",
        "${input:os}"
      ],
    }
  ],
  "inputs": [
    {
      "id": "os",
      "description": "Select the target operating system",
      "type": "pickString",
      "options": ["fedora", "ubuntu"]
    },
    {
      "id": "file",
      "description": "Select the input YAML configuration file",
      "type": "pickString",
      "options": [
        "../../../packages",
        "01-package",
        "02-package-default-name",
        "03-package-type-only",
        "04-pre-post_install",
        "05-flags",
        "06-depends_on",
        "07-snapd",
        "08-flatpak",
        "09-tarball",
        "10-github",
        "11-file",
        "12-pip",
        "13-shell",
        "14-zip"
      ],
      "default": "../../../packages",
    }
  ]
}
